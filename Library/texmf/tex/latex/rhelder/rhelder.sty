\DeclareKeys[rhelder]{
  biblatex.code = \SetKeys[rh@biblatex]{#1},
  doublespaced.if = rh@doublespaced,
  anonymous.if = rh@anonymous,
  author.code =
    \notbool{rh@anonymous}{
      \author{#1}
