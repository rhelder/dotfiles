\def\rh@genpl@do#1{%
  \appto{\rh@tempa}{#1}%
  \let\rh@genpl@last #1%
  \futurelet\rh@genpl@next\rh@genpl@iterate
}

\def\rh@genpl@iterate{%
  \ifx\rh@genpl@next\relax\relax
    \ifx\rh@genpl@last s\relax
      \rh@tempa '%
    \else
      \rh@tempa 's%
    \fi
    \let\rh@genpl@do\relax
  \else\ifx\rh@genpl@next\@sptoken\relax
    \appto{\rh@tempa}{\space}%
  \fi\fi
  \rh@genpl@do
}

