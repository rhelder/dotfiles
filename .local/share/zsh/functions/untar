# Extract a `tar` file into a directory of the same name in the parent
# directory; optionally, trash the `tar` file

if [[ $1 == '--trash' || $1 == '-t' ]]; then
    topt=1
    shift
fi

if [[ $* ]]; then
    for file in $*; do
        mkdir ${file%.tar*}
        tar -xf $file --cd ${file%.tar*}
    done

    (( topt == 1 )) && trash $*

else
    echo 'tar: no files or directories specified' >&2
    return 1
fi
