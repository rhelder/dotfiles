local -a opts
while getopts 'dt' flag; do
    case $flag in
        (d) opts+=( '-m' 'draft' );;
        (t) local -i develop=1;;
    esac
done
shift $(( OPTIND - 1 ))

local -a opts
if (( develop == 1 )); then
    opts+=( '-c' 'develop.cfg' )
else
    opts+=( '-c' 'tex4ht.cfg' '-ul' )
fi

make4ht $opts $*
