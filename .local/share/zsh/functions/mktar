# Create compressed tarball by the same name as the original file; optionally,
# trash the original file when done

if [[ $1 == '--trash' || $1 == '-t' ]]; then
    local -i topt=1
    shift
fi

if [[ $* ]]; then
    for file in $*; do
        tar -czf ${file}.tar.gz $file
    done

    (( topt == 1 )) && trash $*

else
    echo 'tar: no files or directories specified' >&2
    return 1
fi

