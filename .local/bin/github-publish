#!/bin/zsh

# Filter my private repo and push the filtered repo to a new remote (e.g., for
# publishing part of my private repo as a public repo)

set -e

if [[ ! $1 ]]; then
    echo 'Error: please enter name of target repository' >&2
    exit 1
elif [[ ! -f $XDG_CONFIG_HOME/git/filter-repo/$1 ]]; then
    echo "Error: $XDG_CONFIG_HOME/git/filter-repo/$1 does not exist" >&2
    exit 1
fi

echo 'Cloning...'
git clone https://github.com/rhelder/rhelder.git --recurse-submodules
cd rhelder

echo 'Filtering...'
# Make sure that we are *not* in the home repository
if [[ $(git rev-parse --show-toplevel) == /Users/rhelder ]]; then
    echo 'Error: proceeding will rewrite history of home repository' >&2
    exit 1
fi
# Exclude selected files
git filter-repo --invert-paths --paths-from-file \
    $XDG_CONFIG_HOME/git/filter-repo/$1

echo 'Pushing...'
git remote add origin https://github.com/rhelder/$1.git
git push origin main

echo 'Cleaning up...'
cd ..
sudo rm -r rhelder
